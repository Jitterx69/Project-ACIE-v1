# Environment configuration for ACIE production deployment
# Copy this file to .env and update with your values

# Security
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
API_KEY_SALT=another-secure-random-string

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=acie_db
POSTGRES_USER=acie
POSTGRES_PASSWORD=change-this-password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
GRAFANA_PASSWORD=change-this-password

# Model Configuration
MODEL_PATH=/models/acie_final.ckpt
CONFIG_PATH=/config/gpu_config.yaml

# GPU
CUDA_VISIBLE_DEVICES=0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
